package raj;

import java.util.Scanner;
//*   *
//** **
//*****
//*****
//** **
//*   *
public class Main1 {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		for(int i=0;i<a;i++){
			for(int j=a;j>=a-i;j--){
				System.out.print("*");
			}
			for(int j=0;j<a-1-i;j++){
				System.out.print(" ");
			}
			for(int j=0;j<a-1-i;j++){
				System.out.print(" ");
			}
			for(int j=a;j>=a-i;j--){
				System.out.print("*");
			}
			System.out.println();
		}
		
		
		
		for(int i=0;i<a;i++){
			for(int j=a-i;j>0;j--){
				System.out.print("*");
			}
			for(int j=a;j>a-i;j--){
				System.out.print(" ");
			}
			for(int j=a;j>a-i;j--){
				System.out.print(" ");
			}for(int j=a-i;j>0;j--){
				System.out.print("*");
			}
			System.out.println();
	}

}
}

